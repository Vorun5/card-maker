{
    "extends": ["stylelint-config-standard", "stylelint-config-idiomatic-order"],
    "rules": {
        "declaration-colon-newline-after": "always-multi-line",
        "color-function-notation": ["modern", { "ignore": ["with-var-inside"] }]
    },
    "ignoreFiles": [
        "build/**",
        "coverage/**",
        "dist/**",
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx"
    ]
}
